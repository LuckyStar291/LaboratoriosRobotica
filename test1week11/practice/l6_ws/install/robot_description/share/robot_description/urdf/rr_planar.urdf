<?xml version="1.0"?>
<robot name="robot_planar">
    <!-- Definicion de materiales -->
        <!-- RGB 1-> TRANSPARENCIA -->
    <material name="blue">
        <color rgba="0 0 0.6 1"/>
    </material>
    <material name="red">
        <color rgba="0.5 0 0 1"/>
    </material>
    <material name="green">
        <color rgba="0 0.5 0 1"/>
    </material>

    <!-- Link base -->

    <link name="base_link">
        <visual>
            <geometry>
                <cylinder length="0.3" radius="0.1">
                </cylinder>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.15"/>
            <material name="green"/>

        </visual>
    </link>

    <!-- Joint base a link1 -->
    <joint name="q1" type="revolute">
        <parent link="base_link"/>
        <child link="link1"/>
        <limit effort="300" velocity="0.1" lower="-3.1416" upper="3.1416"/>
        <axis xyz="0 0 1"/>
        <origin rpy="0 0 0" xyz="0 0 0.1" />
    </joint>

    <!-- Link eslabon 1 -->
    <link name="link1">
        <visual>
            <geometry>
                <box size="0.5 0.1 0.2"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0.25 0 0"/>
            <material name="blue"/>
        </visual>
    </link>

    <!-- Joint link1 a link2 -->
    <joint name="q2" type="revolute">
        <parent link="link1"/>
        <child link="link2"/>
        <limit effort="300" velocity="0.1" lower="-3.1416" upper="3.1416"/>
        <axis xyz="0 0 1"/>
        <origin rpy="0 0 0" xyz="0.5 0 0" />
    </joint>

    
    <!-- Link eslabon 2 -->
    <link name="link2">
        <visual>
            <geometry>
                <box size="0.2 0.1 0.2"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0.1 0 0"/>
            <material name="red"/>
        </visual>
    </link>

</robot>

